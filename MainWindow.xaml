<Window x:Class="Throughput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Throughput"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Cursor="SizeAll"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <!-- Main Container -->
    <Border CornerRadius="10" 
            Background="#C0000000"
            BorderBrush="#30FFFFFF"
            BorderThickness="1"
            Padding="12,10,12,12">
        
        <Grid>
            <!-- Close Button (Top Right) -->
            <TextBlock Text="✕" 
                       FontSize="10" 
                       Foreground="#60FFFFFF"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,-4,-4,0"
                       Cursor="Hand"
                       MouseLeftButtonDown="CloseButton_Click"
                       ToolTip="Close"/>
            
            <StackPanel>
                <!-- Speed Test Section -->
                <Border Background="#20FFFFFF" 
                        CornerRadius="8" 
                        Padding="12,8" 
                        Margin="0,6,0,10">
                    <!-- Entire speed test area clickable -->
                    <StackPanel HorizontalAlignment="Center"
                                Cursor="Hand"
                                MouseLeftButtonDown="SpeedTest_Click">
                        <!-- Icon + Text (no gap) -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="⚡" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="#FBBF24"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="SpeedTestText"
                                       Text="Test Speed" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="#60A5FA"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <!-- Subtext (also clickable) -->
                        <TextBlock x:Name="SpeedTestSubtext"
                                   Text="Click to measure" 
                                   FontSize="9" 
                                   Foreground="#80FFFFFF"
                                   HorizontalAlignment="Center"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Real-time Speeds -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Download -->
                    <TextBlock Text="↓" 
                               FontSize="11" 
                               Foreground="#4ADE80"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,3,0"/>
                    <TextBlock x:Name="DownloadSpeedText"
                               Text="0 B/s" 
                               FontSize="11" 
                               Foreground="#4ADE80"
                               VerticalAlignment="Center"/>
                    
                    <!-- Separator -->
                    <TextBlock Text="│" 
                               Foreground="#40FFFFFF" 
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="10,0"/>
                    
                    <!-- Upload -->
                    <TextBlock Text="↑" 
                               FontSize="11" 
                               Foreground="#F472B6"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,3,0"/>
                    <TextBlock x:Name="UploadSpeedText"
                               Text="0 B/s" 
                               FontSize="11" 
                               Foreground="#F472B6"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
