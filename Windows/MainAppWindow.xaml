<Window x:Class="Throughput.Windows.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Throughput - Network Dashboard"
        Width="480" Height="600"
        MinWidth="350" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Foreground="White"
        ResizeMode="CanResizeWithGrip">
    
    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1a1a2e"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#3b82f6" Offset="0"/>
                                    <GradientStop Color="#2563eb" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Widget Radio Style -->
        <Style x:Key="WidgetRadio" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#CBD5E1"/> <!-- Whiter text -->
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="Transparent" 
                                BorderBrush="#475569"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1e3a8a"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main container with glass effect -->
    <Border Background="#90080810" CornerRadius="12"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
        
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Grid Width="440" Margin="20,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- WINDOW CONTROLS -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Background="Transparent" Padding="5" Cursor="Hand" MouseLeftButtonDown="MinimizeButton_Click" ToolTip="Minimize">
                            <TextBlock Text="â”€" FontSize="14" FontWeight="Bold" Foreground="#CBD5E1"/>
                        </Border>
                        <Border Background="Transparent" Padding="5" Cursor="Hand" MouseLeftButtonDown="CloseButton_Click" ToolTip="Close">
                            <TextBlock Text="âœ•" FontSize="14" FontWeight="Bold" Foreground="#CBD5E1"/>
                        </Border>
                    </StackPanel>
                </Grid>
                
                <!-- HEADER -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                ToolTip="Real-time network speed monitoring">
                        <TextBlock Text="âš¡" FontSize="26" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="Throughput" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="#60A5FA"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Network Speed Monitor" 
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#CBD5E1" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,5"
                               ToolTip="Monitors your active network adapter"/>
                </Grid>
                
                <!-- LIVE NETWORK SPEED CARD -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="ðŸ“Š" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Live Network Speed" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text=" â€¢ Updates every second" 
                                       FontSize="11" 
                                       FontWeight="SemiBold"
                                       Foreground="#ffffffff" 
                                       VerticalAlignment="Center"
                                       Margin="6,0,0,0"/>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Download -->
                            <Border Grid.Column="0" Background="#252542" CornerRadius="12" Padding="0,16"
                                    ToolTip="Current download speed">
                                <StackPanel HorizontalAlignment="Center">
                                    <Border CornerRadius="50" Width="44" Height="44" HorizontalAlignment="Center" Margin="0,0,0,8">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#064E3B" Offset="0"/>
                                                <GradientStop Color="#065F46" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="â†“" FontSize="20" Foreground="#34D399" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="LiveDownloadSpeed" 
                                               Text="0 KB/s" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#34D399"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"/>
                                    <TextBlock Text="Download" 
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="#ffffffff" 
                                               HorizontalAlignment="Center"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Upload -->
                            <Border Grid.Column="2" Background="#252542" CornerRadius="12" Padding="0,16"
                                    ToolTip="Current upload speed">
                                <StackPanel HorizontalAlignment="Center">
                                    <Border CornerRadius="50" Width="44" Height="44" HorizontalAlignment="Center" Margin="0,0,0,8">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#831843" Offset="0"/>
                                                <GradientStop Color="#9D174D" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="â†‘" FontSize="20" Foreground="#F472B6" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="LiveUploadSpeed" 
                                               Text="0 KB/s" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#F472B6"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"/>
                                    <TextBlock Text="Upload" 
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="#ffffffff" 
                                               HorizontalAlignment="Center"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- SPEED TEST CARD -->
                <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="ðŸš€" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Internet Speed Test" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button x:Name="SpeedTestButton" 
                                Content="Test My Internet Speed"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Center"
                                Width="180"
                                Click="SpeedTestButton_Click"
                                ToolTip="Measure your internet connection speed and latency"/>
                        
                        <ProgressBar x:Name="TestProgressBar"
                                     Height="4"
                                     Margin="0,16,0,0"
                                     Background="#252542"
                                     Foreground="#3b82f6"
                                     Visibility="Collapsed"/>
                        
                        <TextBlock x:Name="TestStatusText"
                                   Text="Measure your maximum internet bandwidth"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#ffffffff"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                        
                        <!-- Results Grid -->
                        <Grid x:Name="ResultsGrid" Margin="0,20,0,0" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Latency -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Ping" FontSize="11" FontWeight="SemiBold" Foreground="#ffffffff" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                    <TextBlock x:Name="ResultLatency" Text="0" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Bottom"/>
                                    <TextBlock Text=" ms" FontSize="10" FontWeight="SemiBold" Foreground="#94A3B8" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Rectangle Grid.Column="1" Width="1" Fill="#252542" Margin="0,4"/>

                            <!-- Download -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Download" FontSize="11" FontWeight="SemiBold" Foreground="#ffffffff" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ResultDownload" Text="0" FontSize="16" FontWeight="Bold" Foreground="#4ADE80" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                <TextBlock x:Name="ResultDownloadMB" Text="â‰ˆ 0.0 MB/s" FontSize="10" FontWeight="SemiBold" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>

                            <Rectangle Grid.Column="3" Width="1" Fill="#252542" Margin="0,4"/>
                            
                            <!-- Upload -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Upload" FontSize="11" FontWeight="SemiBold" Foreground="#ffffffff" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ResultUpload" Text="0" FontSize="16" FontWeight="Bold" Foreground="#F472B6" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                <TextBlock x:Name="ResultUploadMB" Text="â‰ˆ 0.0 MB/s" FontSize="10" FontWeight="SemiBold" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- WIDGET SELECTOR -->
                <Border Grid.Row="4" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="ðŸŽ¨" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Widget Style" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                        </StackPanel>
                        
                        <WrapPanel HorizontalAlignment="Center">
                            <RadioButton x:Name="FullWidgetRadio" Content="Full" Tag="Full" Style="{StaticResource WidgetRadio}" GroupName="Widgets" Checked="WidgetRadio_Checked"
                                         ToolTip="Show the full dashboard overlay"/>
                            <RadioButton x:Name="CompactWidgetRadio" Content="Compact" Tag="Compact" Style="{StaticResource WidgetRadio}" GroupName="Widgets" Checked="WidgetRadio_Checked"
                                         ToolTip="Show small pill widget"/>
                            <RadioButton x:Name="MinimalWidgetRadio" Content="Minimal" Tag="Minimal" Style="{StaticResource WidgetRadio}" GroupName="Widgets" Checked="WidgetRadio_Checked"
                                         ToolTip="Show text-only widget"/>
                            <RadioButton x:Name="SpeedTestWidgetRadio" Content="Speed Test" Tag="SpeedTest" Style="{StaticResource WidgetRadio}" GroupName="Widgets" Checked="WidgetRadio_Checked"
                                         ToolTip="Show dedicated speed test widget"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
                
                <!-- FOOTER -->
                <StackPanel Grid.Row="5" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <TextBlock FontSize="10" 
                               Foreground="#ffffffff"
                               Cursor="Hand"
                               HorizontalAlignment="Center"
                               MouseLeftButtonDown="OpenHakkanLink_Click"
                               ToolTip="Visit Developer's Portfolio">
                        <Run Text="Crafted by "/>
                        <Run Text="Hakkan" TextDecorations="Underline" FontWeight="SemiBold" Foreground="#fcfcfcff"/>
                    </TextBlock>
                               
                    <TextBlock Text="v2.1.0" 
                               FontSize="10" 
                               FontWeight="SemiBold"
                               Foreground="#ffffffff"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Viewbox>
    </Border>
</Window>
