<Window x:Class="Throughput.Windows.CompactWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Throughput"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Foreground="White"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Cursor="SizeAll"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">
    
    <!-- Compact Container - Transparent with subtle border on hover -->
    <Border x:Name="MainBorder"
            CornerRadius="8" 
            Background="#80000000"
            BorderBrush="Transparent"
            BorderThickness="1"
            Padding="10,6">
        
        <Grid>
            <!-- Close Button - Only visible on hover -->
            <TextBlock x:Name="CloseButton"
                       Text="✕" 
                       FontSize="9" 
                       Foreground="#80FFFFFF"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,-2,-4,0"
                       Cursor="Hand"
                       Visibility="Hidden"
                       MouseLeftButtonDown="CloseButton_Click"
                       ToolTip="Close application"/>
            
            <!-- Speed Display -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Download -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="↓" 
                               FontSize="12" 
                               Foreground="#4ADE80"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,3,0"/>
                    <TextBlock x:Name="DownloadSpeedText"
                               Text="0 KB/s" 
                               FontSize="11" 
                               FontWeight="SemiBold"
                               Foreground="#4ADE80"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Separator -->
                <Border Width="1" Height="14" Background="#40FFFFFF" VerticalAlignment="Center" Margin="8,0"/>
                
                <!-- Upload -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="↑" 
                               FontSize="12" 
                               Foreground="#F472B6"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,3,0"/>
                    <TextBlock x:Name="UploadSpeedText"
                               Text="0 KB/s" 
                               FontSize="11" 
                               FontWeight="SemiBold"
                               Foreground="#F472B6"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
