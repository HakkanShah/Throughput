<Window x:Class="Throughput.Windows.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Throughput"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Cursor="SizeAll"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <!-- Main Container -->
    <Border CornerRadius="12" 
            Background="#C0080810"
            BorderBrush="#30FFFFFF"
            BorderThickness="1"
            Padding="14,10,14,12">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with Close Button -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="âš¡" FontSize="12" VerticalAlignment="Center" Margin="0,0,3,0"/>
                    <TextBlock Text="Throughput" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               Foreground="#60A5FA"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="âœ•" 
                           FontSize="11" 
                           Foreground="#60FFFFFF"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Cursor="Hand"
                           MouseLeftButtonDown="CloseButton_Click"
                           ToolTip="Close application"/>
            </Grid>
            
            <!-- Live Network Speed -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Download -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="â†“" 
                                   FontSize="14" 
                                   Foreground="#4ADE80"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="DownloadSpeedText"
                                   Text="0 KB/s" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="#4ADE80"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Download" 
                               FontSize="9" 
                               Foreground="#70FFFFFF"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Separator -->
                <Border Grid.Column="1" Width="1" Height="32" Background="#30FFFFFF" VerticalAlignment="Center" Margin="14,0"/>
                
                <!-- Upload -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="â†‘" 
                                   FontSize="14" 
                                   Foreground="#F472B6"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="UploadSpeedText"
                                   Text="0 KB/s" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="#F472B6"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Upload" 
                               FontSize="9" 
                               Foreground="#70FFFFFF"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
            
            <!-- More Details Link -->
            <TextBlock Grid.Row="2"
                       Text="ðŸ“Š More Details" 
                       FontSize="10" 
                       Foreground="#60A5FA"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Cursor="Hand"
                       MouseLeftButtonDown="OpenDashboard_Click"
                       ToolTip="Open dashboard for speed test and more"/>
        </Grid>
    </Border>
</Window>
